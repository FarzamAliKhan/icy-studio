<style>

    .line-height {
        line-height: 1.1;
    }

    #circle {
        position: relative;
        border-radius: 100%;
        padding: 0px;
        animation: rotate-animation 6s infinite linear ;
        color: #b3e823;
    }

    @keyframes rotate-animation {
    from { transform: rotate(0); }
    to { transform: rotate(-360deg); }
    }

    #inner-circle {
    position: absolute;
    top: 50%;  /* Center vertically */
    left: 50%;  /* Center horizontally */
    width: 55px;  /* Example inner circle diameter */
    height: 55px;  /* Example inner circle diameter (ensure square) */
    border-radius: 50%; /* Create a circular shape */
    background-color: #f7f7f7; /* Example background color (optional) */
    }

    :root {
  --color-main: #b3e823;
  --color-main-second: #8f7cff;
  --color-main-third: #f7f7f7;
}

/* Button Style */

.btn {
	 display: inline-block;
	 position: relative;
	 border: none;
	 border-radius: 999rem;
	 cursor: pointer;
	 overflow: hidden;
	 background-color: transparent;
}
 .btn:hover .btn__bg {
	 scale: 0.94;
}
 .btn:hover .btn__text-out {
	 transition: transform 1s cubic-bezier(0.32, 0.99, 0.49, 0.99), opacity 0.4s;
	 transform: translateY(-33.333333%);
	 opacity: 0;
}
 .btn:hover .btn__text-in {
	 transition: 1s all cubic-bezier(0.32, 0.99, 0.49, 0.99);
	 transform: translateY(0);
	 opacity: 1;
}
 .btn:hover .btn__bg__layer-first, .btn:hover .btn__bg__layer-second, .btn:hover .btn__bg__layer-third {
	 border-radius: 60% 60% 0 0;
	 transform: translateY(1rem);
}
 .btn:hover .btn__bg__layer-first {
	 transition: transform 1s cubic-bezier(0.19, 1, 0.22, 1) 200ms, border-radius 0.2s cubic-bezier(0.19, 1, 0.22, 1) 270ms;
}
 .btn:hover .btn__bg__layer-second {
	 transition: transform 1s cubic-bezier(0.19, 1, 0.22, 1) 300ms, border-radius 0.2s cubic-bezier(0.19, 1, 0.22, 1) 470ms;
}
 .btn:hover .btn__bg__layer-third {
	 transition: transform 1s cubic-bezier(0.19, 1, 0.22, 1) 380ms, border-radius 0.2s cubic-bezier(0.19, 1, 0.22, 1) 670ms;
}
 .btn__text-out, .btn__text-in {
	 display: flex;
	 justify-content: center;
	 align-items: center;
	 position: absolute;
	 inset: 0;
	 margin: auto;

	 z-index: 10;
     letter-spacing: normal;
}
 .btn__text-in {
	 opacity: 0;
	 transform: translateY(33.333333%);
}
 .btn__bg {
	 height: inherit;
	 width: inherit;
	 transition: scale 1.5s cubic-bezier(0.19, 1, 0.22, 1);
	 background-color: var(--color-main-third);
	 border-radius: 999rem;
	 overflow: hidden;
}
 .btn__bg__layer {
	 position: absolute;
	 display: block;
	 bottom: 0;
	 left: 50%;
	 translate: -50%;
	 border-radius: 999rem 999rem 0 0;
	 border: none;
	 width: 120%;
	 height: 200%;
	 z-index: 20;
	 transform: translateY(100%) translateX(0);
}
 .btn__bg__layer-first {
	 background-color: var(--color-main);
}
 .btn__bg__layer-second {
	 background-color: var(--color-main-second);
}
 .btn__bg__layer-third {
	 background-color: var(--color-main-third);
}




</style>

<script>
    const degreeToRadian = (angle: number): number => {
        return angle * (Math.PI / 180);
        };

    const radius: number = 40;
    const diameter: number = radius * 2;

    const circle: HTMLElement | null = document.querySelector("#circle");
    if (circle) {
    circle.style.width = `${diameter}px`;
    circle.style.height = `${diameter}px`;

        const text: string | undefined = circle.dataset.text;
        if (text) {
            const characters: string[] = text.split("");

            const deltaAngle: number = 360 / characters.length;
            const characterOffsetAngle: number = 8;
            let currentAngle: number = -90;

            characters.forEach((character, index) => {
            const span: HTMLSpanElement = document.createElement("span");
            span.innerText = character;
            const xPos: number = radius * (1 + Math.cos(degreeToRadian(currentAngle)));
            const yPos: number = radius * (1 + Math.sin(degreeToRadian(currentAngle)));

            const transform: string = `translate(${xPos}px, ${yPos}px)`;
            const rotate: string = `rotate(${(index * deltaAngle) + characterOffsetAngle}deg)`;
            span.style.transform = `${transform} ${rotate}`;
            span.style.position = "absolute";
            span.style.transformOrigin = "top left";


            currentAngle += deltaAngle;
            if (circle) circle.appendChild(span);
            });
        }
    }
</script>