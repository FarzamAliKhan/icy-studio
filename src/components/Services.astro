        background-clip: text;
    }
</style>

<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    import splitType from 'split-type';


    let tl = gsap.timeline();

    const { innerHeight } = window;

    gsap.registerPlugin(ScrollTrigger);
    // // zoom-in animation
    let scroll = tl.to("#services-zoom-in h1", {
        scale: 160, stagger: 0.25, duration: 0.2, ease: "power1.inOut", 
        scrollTrigger: {
            trigger: "#services-zoom-in",
            pin: true,
            end: `+=${innerHeight * 1.3}`,
            scrub: 10,
            markers: true,
            
        }
    });

    // sevices heading animation
    var servicesAnimation = tl
    .fromTo('.services-line-1', {
        autoAlpha: 0,
        y: 70,
         duration: 0.2,
        ease: "power1.inOut",
    },{
        autoAlpha: 1,
        y: 0,
        duration: 0.2,
        ease: "power1.inOut",
        scrollTrigger: {
            trigger: ".services-line-1",
            start: 'top bottom',
            end: 'bottom center',
            scrub: 1,
            markers: true,
        }
    });

    //services text-reveal animation
    var servicesAnimation2 = tl
    .fromTo('.services-line-2', {
        autoAlpha: 0,
        y: 70,
         duration: 0.5,
        ease: "power1.inOut",
    },{
        autoAlpha: 1,
        y: 0,
        duration: 2,
        ease: "power1.inOut",
        stagger: {
            each: 0.32,
            from: 'start',
            grid: 'auto',
            ease: 'power2.inOut',
        },
        scrollTrigger: {
            trigger: ".services-line-2",
            start: 'top 90%',
            end: 'bottom 60%',
            scrub: 0.2,
            markers: true,
        }
    });

    //services image animation
    tl.fromTo('.services-img-1', {
        autoAlpha: 0,
        y: 15,
        scale: 0.90,
         duration: 0.5,
        ease: "power1.inOut",
    },{
        autoAlpha: 1,
        y: 0,
        scale: 1,
        duration: 0.5,
        ease: "power1.inOut",
        scrollTrigger: {
            trigger: ".services-img-1",
            start: 'top bottom',
            end: 'bottom 60%',
            scrub: 0.2,
            markers: true,
        }
    });


    // services section overlap sliding animation

    const tl2 = gsap.timeline({
    scrollTrigger: {
        trigger: '.services-section',
        start: 'top top',
        end: 'bottom top',
        scrub: 1,
        markers: true,
        // ease: 'linear',
        }
    })

    tl2.to('.services-section .text', {
    height: 0,
    paddingBottom: 0,
    opacity: 0,
    stagger: .5,
    })
    tl2.to('.services-section', {
    marginBottom: -15,
    stagger: .1,
    }, '<')

    
    const ourText = new splitType('.heading-1', { types: 'chars' })
    const chars = ourText.chars

    
    tl.fromTo(
    chars,
    { 
        y: 100,
        opacity: 0
    },
    {
        y: 0,
        opacity: 1,
        stagger: 0.3,
        duration: 6,
        ease: 'power2.out',
        scrollTrigger: {
            trigger: ".heading-1",
            start: 'top 90%',
            end: 'bottom 60%',
            scrub: 1,
            markers: true,
        }
    }, 
    );

</script>

